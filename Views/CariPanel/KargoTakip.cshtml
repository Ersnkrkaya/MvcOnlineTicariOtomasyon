@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

@using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
{
    <div style="margin-top:15px;margin-bottom:15px;">
        <b>Kargo Takip Numarasını Girin:</b>
        @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </div>
}
<table class="table table-bordered" style="margin:20px">
    <thead>
        <tr>
            <th>Personel</th>
            <th>Alıcı</th>
            <th>Tarih</th>
            <th>Takip Kodu</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kargo in Model)
        {
            <tr>
                <td>@kargo.Personel</td>
                <td>@kargo.Alici</td>
                <td>@kargo.Tarih</td>
                <td>@kargo.TakipKodu</td>
                <td><a href="/CariPanel/CariKargoTakip/@kargo.TakipKodu" class="btn btn-default" style="background-color:lightcoral;color:white">Kargo Takip</a></td>

            </tr>
        }
    </tbody>
</table>