@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>DepartmanDetay</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.dprtmn</li>
</ol>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Personel</th>
            <th>Satışlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var personel in Model)
        {
            <tr>
                <td>@personel.PersonelAd @personel.PersonelSoyad</td>
                <td><a href="/Departman/DepartmanPersonelSatis/@personel.Personelid" class="btn btn-default" style="background-color:aquamarine;">Satışlar</a></td>
            </tr>
}
    </tbody>
</table>