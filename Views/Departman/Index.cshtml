@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin:20px">
    <thead>
        <tr>
            <th>Id</th>
            <th>Departman Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var departman in Model)
        {
            <tr>
                <td>@departman.Departmanid</td>
                <td>@departman.DepartmanAd</td>
                <td><a href="/Departman/DepartmanSil/@departman.Departmanid" class="btn btn-danger">Sil</a></td>
                <td><a href="/Departman/DepartmanGetir/@departman.Departmanid" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Departman/DepartmanDetay/@departman.Departmanid" class="btn btn-default" style="background-color:lightcoral;color:white">Departman Detay</a></td>
                
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-info" href="/Departman/YeniDepartman">Yeni Departman</a>