@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Index</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Cari Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Şehir</th>
            <th>Mail</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Satış Geçmişi</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var x in Model) { 
        <tr>
            <td>@x.Cariid</td>
            <td>@x.CariAd</td>
            <td>@x.CariSoyad</td>
            <td>@x.CariSehir</td>
            <td>@x.CariMail</td>
            <td><a href="/Cari/CariSil/@x.Cariid" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cari/CariGetir/@x.Cariid"class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Cari/CariGecmis/@x.Cariid" class="btn btn-default" style="background-color:lightcoral">Satış Geçmişi</a></td>
        </tr>
        }
    </tbody>
</table>
<a href="/Cari/YeniCari" class="btn btn-info">Yeni Cari Ekle</a>