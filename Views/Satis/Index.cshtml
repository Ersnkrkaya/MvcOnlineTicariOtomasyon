@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Index</h2>
<br />

<table class="table table-striped" id="tbl1">
    <thead>
        <tr>
            <th>Satış Id</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>Detaylar</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var satis in Model)
        {
            <tr>
                <td>@satis.Satisid</td>
                <td>@satis.Urun.UrunAd</td>
                <td>@satis.Cariler.CariAd @satis.Cariler.CariSoyad</td>
                <td>@satis.Personel.PersonelAd @satis.Personel.PersonelSoyad</td>
                <td>@satis.Adet</td>
                <td>@satis.Fiyat</td>
                <td>@satis.ToplamTutar</td>
                <td>@satis.Tarih</td>
                <td><a href="/Satis/SatisGetir/@satis.Satisid" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Satis/SatisDetay/@satis.Satisid" class="btn btn-default" style="background-color:lightcoral">Detaylar</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Satis/YeniSatis" class="btn btn-info">Yeni Satış Yap</a>


<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>

$('#tbl1').dataTable({});

</script>