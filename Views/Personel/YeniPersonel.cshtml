@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel

@{
    ViewBag.Title = "YeniPersonel";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>YeniPersonel</h2>

<form method="post" class="form-group" enctype="multipart/form-data">
    @Html.LabelFor(k => k.PersonelAd)
    @Html.TextBoxFor(k => k.PersonelAd, new { @class = "form-control" })
    <br />
    @Html.LabelFor(k => k.PersonelSoyad)
    @Html.TextBoxFor(k => k.PersonelSoyad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(k => k.PersonelGorsel)
    @*@Html.TextBoxFor(k => k.PersonelGorsel, new { @class = "form-control" })*@
    <input type="file" name="PersonelGorsel" />
    <br />
    @Html.LabelFor(k => k.Departman)
    @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />

    <input type="submit" class="btn btn-primary" value="Kategori Ekle" />
</form>